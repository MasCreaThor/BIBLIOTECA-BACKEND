{
  "name": "biblioteca-backend",
  "version": "1.0.0",
  "description": "Sistema de Gestión de Biblioteca Escolar - Backend",
  "author": "Equipo Biblioteca",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "db:seed": "ts-node -r tsconfig-paths/register src/database/seeds/seed.command.ts seed",
    "db:seed:dev": "ts-node -r tsconfig-paths/register src/database/seeds/seed.command.ts seed:dev",
    "db:seed:clear": "ts-node -r tsconfig-paths/register src/database/seeds/seed.command.ts seed:clear",
    "db:verify": "ts-node -r tsconfig-paths/register src/database/seeds/seed.command.ts verify",
    "fix:structure": "node scripts/verify-architecture.js",
    "check:types": "tsc --noEmit",
    "fix:imports": "npm run build || echo 'Errores de compilación encontrados'",
    "admin:init": "ts-node -r tsconfig-paths/register src/database/seeds/admin-bootstrap.command.ts",
    "admin:status": "ts-node -r tsconfig-paths/register src/database/seeds/admin-status.command.ts",
    "loans:fix": "ts-node -r tsconfig-paths/register src/scripts/fix-loan-system.ts fix",
    "loans:verify": "ts-node -r tsconfig-paths/register src/scripts/fix-loan-system.ts verify",
    "loans:seed-statuses": "ts-node -r tsconfig-paths/register src/scripts/fix-loan-system.ts seed-statuses",
    "loans:check-overdue": "ts-node -r tsconfig-paths/register src/database/utils/loan-utils.command.ts check-overdue",
    "loans:update-overdue": "ts-node -r tsconfig-paths/register src/database/utils/loan-utils.command.ts update-overdue",
    "loans:stats": "ts-node -r tsconfig-paths/register src/scripts/loan-stats.command.ts",
    "loans:cleanup": "ts-node -r tsconfig-paths/register src/scripts/loan-cleanup.command.ts",
    "system:check": "npm run loans:verify && npm run loans:fix",
    "system:init": "npm run db:seed && npm run loans:seed-statuses && npm run admin:init",
    "system:reset": "npm run db:seed:clear && npm run system:init",
    "system:health": "npm run db:verify && npm run loans:verify && npm run admin:status",
    "dev:setup": "npm install && npm run system:init && npm run start:dev",
    "prod:deploy": "npm run build && npm run system:health && npm run start:prod",
    "migrate:loans": "ts-node -r tsconfig-paths/register src/scripts/migrate-loan-data.ts",
    "backup:create": "ts-node -r tsconfig-paths/register src/scripts/backup-database.ts create",
    "backup:restore": "ts-node -r tsconfig-paths/register src/scripts/backup-database.ts restore",
    "test:loans": "jest --testPathPattern=loan --verbose",
    "test:integration": "jest --config ./test/jest-integration.json",
    "docs:generate": "compodoc -p tsconfig.json -s",
    "docs:serve": "compodoc -p tsconfig.json -s --watch",
    "husky:prepare": "husky install",
    "commit": "git-cz",
    "precommit": "lint-staged",
    "prepush": "npm run test && npm run lint"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/mongoose": "^11.0.0",
    "@nestjs/passport": "^11.0.0",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/platform-socket.io": "^11.0.1",
    "@nestjs/schedule": "6.0.0",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/websockets": "^11.0.1",
    "bcrypt": "^5.1.1",
    "cache-manager": "^5.2.4",
    "cache-manager-memory-store": "^1.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "express-rate-limit": "^7.1.5",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "mongoose": "^8.8.5",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "qrcode": "^1.5.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.20",
    "@nestjs/cli": "^11.0.1",
    "@nestjs/schematics": "^11.0.1",
    "@nestjs/testing": "^11.0.1",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/lodash": "^4.14.202",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.9.0",
    "@types/nodemailer": "^6.4.14",
    "@types/passport-jwt": "^3.0.13",
    "@types/passport-local": "^1.0.38",
    "@types/qrcode": "^1.5.5",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/$1",
      "^@modules/(.*)$": "<rootDir>/modules/$1",
      "^@shared/(.*)$": "<rootDir>/shared/$1",
      "^@common/(.*)$": "<rootDir>/common/$1"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/biblioteca-backend.git"
  },
  "keywords": [
    "biblioteca",
    "prestamos",
    "gestion",
    "escolar",
    "nestjs",
    "mongodb",
    "typescript"
  ],
  "bugs": {
    "url": "https://github.com/your-org/biblioteca-backend/issues"
  },
  "homepage": "https://github.com/your-org/biblioteca-backend#readme"
}
